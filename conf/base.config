/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    A 'blank slate' config file, appropriate for general use on most high performance
    compute environments. Assumes that all software is installed and available on the
    PATH. Runs in `local` mode - all jobs will be run on the logged in environment.
--------------------------------------------------------------------------------------
*/

process {
    // Default resource allocations
    executor = 'local'      // Use the local executor
    cpus = 1                // Default number of CPUs per process
    memory = '2 GB'         // Default memory per process
    time = '1h'             // Default time per process

    // Resource specifications by label
    withLabel: 'low' {
        cpus = 1
        memory = '2GB'
        time = '1h'
    }

    withLabel: 'medium' {
        cpus = 2
        memory = '4 GB'
        time = '2h'
    }

    withLabel: 'high' {
        cpus = 4
        memory = '8 GB'
        time = '4h'
    }
}